<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@android:style/Theme.Black.NoTitleBar">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:fontFamily="@font/comfortaa"
            android:text="@string/app_name"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/large_title_size"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="64dp"
            android:contentDescription="@string/info_desc"
            android:fontFamily="@font/karla"
            android:text="@string/info_desc"
            android:textAlignment="center"
            android:textColor="@color/colorDarkGray"
            android:textSize="@dimen/small_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/onboarding_q1"
            android:fontFamily="@font/karla"
            android:text="@string/onboarding_q1"
            android:textColor="@color/colorDarkGray"
            android:textSize="@dimen/medium_text"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/onboarding_q2"
            android:fontFamily="@font/karla"
            android:text="@string/onboarding_q2"
            android:textColor="@color/colorDarkGray"
            android:textSize="@dimen/medium_text"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/onboarding_q3"
            android:fontFamily="@font/karla"
            android:text="@string/onboarding_q3"
            android:textColor="@color/colorDarkGray"
            android:textSize="@dimen/medium_text"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/onboarding_q4"
            android:fontFamily="@font/karla"
            android:text="@string/onboarding_q4"
            android:textColor="@color/colorDarkGray"
            android:textSize="@dimen/medium_text"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/onboarding_q5"
            android:fontFamily="@font/karla"
            android:text="@string/onboarding_q5"
            android:textColor="@color/colorDarkGray"
            android:textSize="@dimen/medium_text"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <RadioButton
            android:id="@+id/woman_radiobutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="28dp"
            android:contentDescription="@string/onboarding_q1a2"
            android:fontFamily="@font/karla"
            android:text="@string/onboarding_q1a2"
            android:textColor="@color/colorDarkGray"
            android:textSize="@dimen/medium_text"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <RadioButton
            android:id="@+id/man_radiobutton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="28dp"
            android:contentDescription="@string/onboarding_q1a1"
            android:fontFamily="@font/karla"
            android:text="@string/onboarding_q1a1"
            android:textColor="@color/colorDarkGray"
            android:textSize="@dimen/medium_text"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/woman_radiobutton"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/current_weight_textbox"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/onboarding_q5"
            android:ems="10"
            android:fontFamily="@font/karla"
            android:inputType="number"
            android:text="@string/onboarding_q4a1"
            android:textAlignment="textEnd"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/medium_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/goal_weight_textbox" />

        <EditText
            android:id="@+id/goal_weight_textbox"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/onboarding_q4a1"
            android:ems="10"
            android:fontFamily="@font/karla"
            android:inputType="number"
            android:text="@string/onboarding_q4a1"
            android:textAlignment="textEnd"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/medium_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/height_in_textbox" />

        <EditText
            android:id="@+id/height_in_textbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/onboarding_q3a2"
            android:ems="10"
            android:fontFamily="@font/karla"
            android:inputType="number"
            android:text="@string/onboarding_q3a2"
            android:textAlignment="textEnd"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/medium_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/height_ft_textbox"
            app:layout_constraintTop_toBottomOf="@+id/year_textbox" />

        <EditText
            android:id="@+id/height_ft_textbox"
            android:layout_width="109dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:fontFamily="@font/karla"
            android:inputType="number"
            android:text="@string/onboarding_q3a1"
            android:textAlignment="textEnd"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/medium_text"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/year_textbox" />

        <EditText
            android:id="@+id/year_textbox"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="16dp"
            android:contentDescription="@string/onboarding_q2a1"
            android:ems="10"
            android:fontFamily="@font/karla"
            android:inputType="number"
            android:text="@string/onboarding_q2a1"
            android:textAlignment="textEnd"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/medium_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/man_radiobutton" />


    </android.support.constraint.ConstraintLayout>

</ScrollView>
